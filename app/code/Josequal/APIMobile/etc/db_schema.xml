<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- Customer Custom Attributes -->
    <table name="customer_entity" resource="default">
        <column xsi:type="varchar" name="mobile_number" nullable="true" length="20" comment="Mobile Number"/>
        <column xsi:type="varchar" name="dial_code" nullable="true" length="10" comment="Dial Code"/>
        <column xsi:type="varchar" name="country_code" nullable="true" length="10" comment="Country Code"/>
    </table>

    <table name="customer_otp" resource="default" engine="innodb" comment="Customer OTP Table">
        <column xsi:type="int" name="otp_id" unsigned="true" nullable="false" identity="true" comment="OTP ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="otp" nullable="false" length="10" comment="OTP Code"/>
        <column xsi:type="datetime" name="expires_at" nullable="false" comment="Expiration Date"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="otp_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="CUSTOMER_OTP_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="customer_otp" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="CUSTOMER_OTP_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>

        <index referenceId="CUSTOMER_OTP_OTP" indexType="btree">
            <column name="otp"/>
        </index>

        <index referenceId="CUSTOMER_OTP_EXPIRES_AT" indexType="btree">
            <column name="expires_at"/>
        </index>
    </table>
</schema>
