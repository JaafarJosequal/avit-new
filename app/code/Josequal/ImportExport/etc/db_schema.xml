<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="josequal_import_export_log" resource="default" engine="innodb" comment="Import Export Log">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="operation_type" length="20" nullable="false" comment="Operation Type: import/export"/>
        <column xsi:type="varchar" name="entity_type" length="50" nullable="false" comment="Entity Type: product/category"/>
        <column xsi:type="varchar" name="file_name" length="255" nullable="true" comment="File Name"/>
        <column xsi:type="int" name="total_records" unsigned="true" nullable="false" default="0" comment="Total Records"/>
        <column xsi:type="int" name="successful_records" unsigned="true" nullable="false" default="0" comment="Successful Records"/>
        <column xsi:type="int" name="failed_records" unsigned="true" nullable="false" default="0" comment="Failed Records"/>
        <column xsi:type="text" name="error_log" nullable="true" comment="Error Log"/>
        <column xsi:type="timestamp" name="started_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Started At"/>
        <column xsi:type="timestamp" name="completed_at" on_update="false" nullable="true" comment="Completed At"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" default="1" comment="Status: 1=Running, 2=Completed, 3=Failed"/>
        <column xsi:type="int" name="admin_user_id" unsigned="true" nullable="true" comment="Admin User ID"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <index referenceId="JOSEQUAL_IMPORT_EXPORT_LOG_OPERATION_TYPE" indexType="btree">
            <column name="operation_type"/>
        </index>

        <index referenceId="JOSEQUAL_IMPORT_EXPORT_LOG_ENTITY_TYPE" indexType="btree">
            <column name="entity_type"/>
        </index>

        <index referenceId="JOSEQUAL_IMPORT_EXPORT_LOG_STATUS" indexType="btree">
            <column name="status"/>
        </index>

        <index referenceId="JOSEQUAL_IMPORT_EXPORT_LOG_STARTED_AT" indexType="btree">
            <column name="started_at"/>
        </index>
    </table>
</schema>
